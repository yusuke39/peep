= render 'peep/header'

.register-wrapper
  %h2.new-register 新規会員登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label 'ニックネーム', class: :'label'
      %br/
      = f.text_field :nickname, autofocus: true, class: :'text-field'
    .field
      = f.label 'メールアドレス', class: :'label'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: :'text-field'
    .field
      = f.label 'パスワード', class: :'label'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} 文字以上)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: :'text-field'
    .field
      = f.label 'パスワード確認', class: :'label'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: :'text-field'
    .field
      = f.label '姓（漢字）', class: :'label'
      %br/
      = f.text_field :last_name_kanji, autofocus: true, class: :'text-field'
    .field
      = f.label '名（漢字）', class: :'label'
      %br/
      = f.text_field :first_name_kanji, autofocus: true, class: :'text-field'
    .field
      = f.label 'プロフィール画像', class: :'label'
      %br/
      = f.file_field :avatar, class: :'image_field', id: :'file'
      #img_field.user_image{:onclick => "$('#file').click()"}
        - if @user.image.present?
          = image_tag(@user.image)
        -else
          %i.fas.fa-image.file-upload
      %br/
    .actions
      = f.submit "次へ進む", class: :'signup-btn'
      %br/
      %br/
