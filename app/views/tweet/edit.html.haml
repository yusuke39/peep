= render 'peep/header'

.tweets-main
  .tweets-main__contain
    .tweets-main__contain__logo ツイート編集
    %i.fa.fa-user-circle.fa-4x.tweets-main__contain__logo__icon
      %p.tweets-main__contain__logo__icon__user 
        = current_user.nickname
  = form_with(model: @tweet, url: "/tweet/#{@tweet.id}", method: :patch, lcoal: true) do |f|
    = f.text_area  :comment, size: '70x5', class: :'tweets-field'
    = f.submit :submit , class: :'tweets-field__btn'
    = link_to 'キャンセル', root_path, class: :'tweets-field__btn__cancel'
