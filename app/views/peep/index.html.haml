.global-nav
  .global-nav__inner
    .gloval-nav__inner__container
      = link_to '', '#', class: :'fas fa-burn icon__main'

      %div.left-nav
        %ul.left-nav__inner
          %li.left-nav__inner__home
            = link_to 'HOME', '#', class: :'fas fa-home left-nav__home'
          %li.left-nav__inner__mypage
            = link_to 'MY PAGE', '#', class: :'fas fa-user-cog left-nav__mypage'

      %div.right-nav
        = form_with url: '', method: :get, local: :true do |f|
          = f.text_field :submit, placeholder: 'search peep',class: :'search-form fas fa-search'
        %ul.right-nav__peep
          %li.right-nav__peep__btn
            = link_to 'peep', '#', class: :'right-nav__peep__btn__icon'

