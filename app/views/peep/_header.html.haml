.global-nav
  .global-nav__inner
    .gloval-nav__inner__container
      = link_to '', root_path, class: :'fas fa-burn icon__main'

      %div.left-nav
        %ul.left-nav__inner
          - if user_signed_in?
            %li.left-nav__inner__items
              = link_to 'HOME', root_path, class: :'fas fa-home left-nav__home'
            %li.left-nav__inner__items
              = link_to 'MY PAGE', mypage_index_path, class: :'fas fa-user-cog left-nav__mypage'
          - else
            %li.left-nav__inner__items
              = link_to '新規会員登録', new_user_registration_path, class: :'user-sign-up'
            %li.left-nav__inner__items
              = link_to 'ログイン', new_user_session_path, class: :'user-login'

      %div.right-nav
        = form_with url: '', method: :get, local: :true do |f|
          = f.text_field :submit, placeholder: 'search peep',class: :'search-form fas fa-search'
        %ul.right-nav__peep
          %li.right-nav__peep__btn
            = link_to 'peep', tweet_index_path, class: :'right-nav__peep__btn__icon'